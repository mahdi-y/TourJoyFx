<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1512.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Favorites">
    <children>
        <ImageView fitHeight="1011.0" fitWidth="1538.0" layoutY="-184.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../images/bg1.jpg" />
            </image>
        </ImageView>
        <ImageView fitHeight="143.0" fitWidth="303.0" layoutX="34.0" layoutY="-3.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../images/tourjoy.png" />
            </image>
        </ImageView>
        <ScrollPane layoutX="313.0" layoutY="200" prefHeight="406.0" prefWidth="964.0">
            <content>
                <GridPane fx:id="favoritesGrid" hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </GridPane>
            </content>
        </ScrollPane>
        <Button fx:id="clearFavoritesButton" layoutX="1340.0" layoutY="720.0" onAction="#clearFavorites" style="-fx-background-color: red;" text="Clear Favorites" textFill="#f4eeee">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font></Button>
        <!-- HOME Button -->
        <Button fx:id="HomeButton" layoutX="634.0" layoutY="39.0" onAction="#goToHome" prefHeight="26.0" prefWidth="86.0" styleClass="custom-button" text="HOME" textFill="#230f6e" />

        <!-- Guide Button -->
        <Button fx:id="guideButton" layoutX="1059.0" layoutY="38.0" onAction="#goToGuides" prefHeight="26.0" prefWidth="86.0" styleClass="custom-button" text="GUIDES" textFill="#230f6e" />

        <!-- Monument Button -->
        <Button fx:id="MonumentButton" layoutX="916.0" layoutY="38.0" onAction="#goToMonuments" prefHeight="38.0" prefWidth="143.0" styleClass="custom-button" text="MONUMENTS" textFill="#230f6e" />

        <!-- Subscription Button -->
        <Button fx:id="SubscriptionButton" layoutX="1140.0" layoutY="37.0" prefHeight="38.0" prefWidth="166.0" styleClass="custom-button" text="SUBSCRIPTIONS" textFill="#230f6e" />

        <!-- Accommodation Button -->
        <Button fx:id="Acc" layoutX="716.0" layoutY="37.0" onAction="#goToAcc" prefHeight="38.0" prefWidth="200.0" styleClass="custom-button" text="ACCOMMODATIONS" textFill="#230f6e" />

        <!-- Claims Button -->
        <Button fx:id="ClaimsButton" layoutX="1275.0" layoutY="37.0" onAction="#goToClaims" prefHeight="38.0" prefWidth="143.0" styleClass="custom-button" text="CLAIMS" textFill="#230f6e" />

    </children>
    <stylesheets>
        <URL value="@Styles/Main.css" />
    </stylesheets>
</AnchorPane>
