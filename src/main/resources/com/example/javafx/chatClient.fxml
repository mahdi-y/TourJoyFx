<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="453.0" prefWidth="600.0" style="-fx-background-color: #739a8b;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.chatClientController">
    <!-- Sample FXML for chat panel -->
    <VBox fx:id="chatPanel" spacing="10">
        <ListView fx:id="messageList" prefHeight="400.0" prefWidth="343.0" style="-fx-border-color: darkBlue;" stylesheets="@backoffice.css" />
        <HBox spacing="10">
            <TextField fx:id="messageField" prefHeight="33.0" prefWidth="282.0" style="-fx-border-color: darkBlue;" HBox.hgrow="ALWAYS" />
            <Button onAction="#sendMessage" prefHeight="36.0" prefWidth="66.0" style="-fx-background-color: #34495E;" text="Send" />

        </HBox>
    </VBox>
</AnchorPane>
