<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ComboBox?>

<VBox prefHeight="700.0" prefWidth="700.0" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.profileController">
    <Label fx:id="welcomeLabel" text="Welcome!"/> <!-- This label will show the welcome message -->
    <Label text="Complete Your Profile!"/>
    <TextField fx:id="firstNameField" promptText="First Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>
    <ComboBox fx:id="countryComboBox" promptText="Country"/>
    <ImageView fx:id="profileImageView" fitHeight="100" fitWidth="100"/>
    <Button text="Upload Image" onAction="#handleUploadImage"/>
    <TextField fx:id="imagePathField" editable="false"/>
    <Button text="Submit" onAction="#updateProfile"/>
</VBox>

