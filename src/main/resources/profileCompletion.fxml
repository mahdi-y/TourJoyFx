<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="1200.0" spacing="10.0" styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.profileCompletionController">
    <HBox alignment="TOP_RIGHT" spacing="10.0">
        <Button fx:id="minimizeButton" onAction="#minimizeWindow" styleClass="minimize-button" />
        <Button fx:id="expandButton" onAction="#expandWindow" styleClass="expand-button" />
        <Button fx:id="closeButton" onAction="#closeWindow" styleClass="close-button" />
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </HBox>
    <Label fx:id="welcomeLabel" styleClass="title-label" text="Welcome!" /> <!-- This label will show the welcome message -->
    <Label styleClass="subtitle-label" text="Complete Your Profile!" />
    <VBox spacing="5">
        <TextField fx:id="firstNameField" prefHeight="28.0" prefWidth="905.0" promptText="First Name" styleClass="input-field" />
        <TextField fx:id="lastNameField" promptText="Last Name" styleClass="input-field" />
        <ComboBox fx:id="countryComboBox" prefHeight="28.0" prefWidth="1181.0" promptText="Country" styleClass="input-field">
         <VBox.margin>
            <Insets left="480.0" />
         </VBox.margin></ComboBox>
        <HBox alignment="CENTER" prefHeight="329.0" prefWidth="1158.0" spacing="10">
            <VBox prefHeight="307.0" prefWidth="445.0" spacing="5">
               <ImageView fx:id="profileImageView" fitHeight="317.0" fitWidth="463.0" preserveRatio="true" />
                <Button onAction="#handleUploadImage" styleClass="upload-button" text="Upload Image">
               <VBox.margin>
                  <Insets left="170.0" top="12.0" />
               </VBox.margin></Button>
                <TextField fx:id="imagePathField" editable="false" styleClass="image-path-field" visible="false" />
            <HBox.margin>
               <Insets top="50.0" />
            </HBox.margin>
            </VBox>
        </HBox>
    </VBox>
    <Button onAction="#updateProfile" styleClass="submit-button" text="Submit" />

    <stylesheets>
        <URL value="@profileCompletionStyles.css" />
    </stylesheets>
</VBox>
