<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>
<VBox fx:id="mainContainer" prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #74ebd5, #ACB6E5);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.registrationController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" text="Welcome! Sign up to get started." wrappingWidth="500">
            <VBox.margin>
                <Insets left="100.0" top="20.0" />
            </VBox.margin>
        </Text>
        <VBox alignment="TOP_CENTER" spacing="15">
            <TextField fx:id="emailField" promptText="Email" styleClass="text-field" />
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="text-field" />
            <TextField fx:id="phoneNumberField" promptText="Phone Number" styleClass="text-field" />
            <Button fx:id="register" onAction="#registerUser" styleClass="btn-register" text="Register" />
            <HBox spacing="5" alignment="CENTER">
                <Text text="Already have an account?" />
                <Hyperlink text="Sign in instead" onAction="#handleSignIn"/>
            </HBox>
            <VBox.margin>
                <Insets top="100.0" />
            </VBox.margin>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</VBox>
