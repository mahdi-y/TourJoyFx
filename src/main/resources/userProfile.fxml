                    <VBox.margin>
                        <Insets left="170.0" top="12.0" />
                    </VBox.margin></Button>
                <TextField fx:id="imagePathField" editable="false" styleClass="image-path-field" visible="false" />
                <HBox.margin>
                    <Insets top="50.0" />
                </HBox.margin>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Save" onAction="#saveChanges" />
            <Button text="Cancel" onAction="#cancelUpdate" />
        </HBox>
    </VBox>
