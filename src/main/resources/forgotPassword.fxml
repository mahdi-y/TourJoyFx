<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="1200.0" styleClass="parent" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.forgotPassword">
    <children>
        <ImageView fitHeight="804.0" fitWidth="1200.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
            <!--<image>
                <Image url="@Images/arriere_plan.png" />
            </image>-->
        </ImageView>
        <TextField fx:id="mail" layoutX="429.0" layoutY="214.0" prefHeight="46.0" prefWidth="410.0" promptText="Your E-mail" />
        <Button fx:id="code_button" layoutX="553.0" layoutY="441.0" mnemonicParsing="false" onAction="#handleVerifyCode" prefHeight="46.0" prefWidth="134.0" style="-fx-background-color: #fea116;" text="Verify">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Button>

        <TextField fx:id="codeField" layoutX="510.0" layoutY="375.0" prefHeight="46.0" prefWidth="221.0" promptText="code" />
        <Button fx:id="send_mail" layoutX="536.0" layoutY="272.0" mnemonicParsing="false" onAction="#handleResetPassword" prefHeight="46.0" prefWidth="169.0" style="-fx-background-color: #fea116;" text="Send Mail">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Button>
        <ImageView fitHeight="173.0" fitWidth="308.0" layoutX="31.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
           <!-- <image>
                <Image url="@Images/LogoApplication-LaCucina.png" />
            </image>-->
        </ImageView>
        <Label layoutX="507.0" layoutY="337.0" text="Enter the security code : ">
            <font>
                <Font size="21.0" />
            </font>
        </Label>
        <Label layoutX="397.0" layoutY="175.0" prefHeight="31.0" prefWidth="558.0" text="Write your E-mail here to receive the security code: ">
            <font>
                <Font size="21.0" />
            </font>
        </Label>
        <Label layoutX="462.0" layoutY="96.0" prefHeight="54.0" prefWidth="342.0" text="Password recovery" textFill="#fea116">
            <font>
                <Font name="System Bold" size="37.0" />
            </font>
        </Label>
        <ImageView fitHeight="54.0" fitWidth="55.0" layoutX="424.0" layoutY="96.0" pickOnBounds="true" preserveRatio="true">
            <!--<image>
                <Image url="@Images/mot-de-passe-oublie.png" />
            </image>-->
        </ImageView>
        <ImageView fitHeight="46.0" fitWidth="37.0" layoutX="378.0" layoutY="265.0" pickOnBounds="true" preserveRatio="true">
            <!--<image>
                <Image url="@Images/icons8-nouveau-message-100.png" />
            </image>-->
        </ImageView>
        <RadioButton fx:id="radioEmail" layoutX="183.0" layoutY="265.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Email">
            <font>
                <Font size="16.0" />
            </font>
        </RadioButton>
        <RadioButton fx:id="radioSMS" layoutX="183.0" layoutY="327.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="147.0" text="SMS">
            <font>
                <Font size="16.0" />
            </font>
        </RadioButton>
      <Label fx:id="passwordLabel" layoutX="373.0" layoutY="513.0" text="New password">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label fx:id="confirmLabel" layoutX="755.0" layoutY="513.0" text="Confirm password">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <TextField fx:id="password" layoutX="310.0" layoutY="555.0" prefHeight="46.0" prefWidth="261.0" />
      <TextField fx:id="confirm" layoutX="699.0" layoutY="555.0" prefHeight="46.0" prefWidth="261.0" />
      <Button fx:id="updatePassword" layoutX="523.0" layoutY="626.0" mnemonicParsing="false" onAction="#updatePassword" prefHeight="46.0" prefWidth="197.0" style="-fx-background-color: #fea116;" text="Update password">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
