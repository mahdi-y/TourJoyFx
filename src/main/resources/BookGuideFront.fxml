<AnchorPane prefHeight="762.0" prefWidth="1550.0" styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BookGuideFront">

    <!-- Left Pane for Navigation Buttons -->
    <AnchorPane prefHeight="762.0" prefWidth="400.0" style="-fx-background-color: #263238;">
        <children>
            <!-- Add logo in the left corner -->
            <ImageView fitHeight="155.0" fitWidth="165.0" layoutX="100.0" layoutY="14.0">
                <image>
                    <Image url="@/image/tourjoy.png" />
                </image>
            </ImageView>
            <!-- Add navigation buttons -->
            <VBox layoutX="55.0" layoutY="248.0" spacing="10">
                <Button style="-fx-background-color: #b7b4e8; -fx-text-fill: white;" mnemonicParsing="false" styleClass="nav-button" text="Monuments Management" />
                <Button style="-fx-background-color: #b7b4e8; -fx-text-fill: white;" mnemonicParsing="false" styleClass="nav-button" text="Other Section" />
                <!-- Add more buttons as needed -->
            </VBox>

        </children>
    </AnchorPane>

    <!-- Main Content Area -->
    <AnchorPane layoutX="400.0" prefHeight="762.0" prefWidth="1150.0" styleClass="content-pane">
        <children>
            <Text fill="#031231" layoutX="450.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Book A Guide">
                <font>
                    <Font size="40.0" />
                </font>
            </Text>
            <!-- DatePicker -->
            <!-- Book Button -->
            <!-- Add your buttons, ComboBox, and DatePicker here -->
            <ComboBox fx:id="guideComboBox" layoutX="420.0" layoutY="250.0" prefWidth="250.0" promptText="Guide" />
            <DatePicker fx:id="datePicker" layoutX="420.0" layoutY="320.0" prefWidth="250.0" promptText="Date" />
            <Button fx:id="bookButton" layoutX="500.0" layoutY="400.0" onAction="#addBooking" style="-fx-background-color: #031231; -fx-text-fill: white;" text="Book" />
            <!-- Continue adding other nodes as needed -->
        </children>
    </AnchorPane>
    <stylesheets>
        <URL value="@/style/styles.css" />
    </stylesheets>

</AnchorPane>
