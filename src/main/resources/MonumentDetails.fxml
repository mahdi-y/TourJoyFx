<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.web.WebView?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.TextFlow?>
<?import java.net.URL?>
<StackPane prefHeight="660.0" prefWidth="942.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MonumentDetailsController">
    <children>
      <ImageView fitHeight="705.0" fitWidth="1175.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/image/background.png" />
         </image>
      </ImageView>
        <!-- Details VBox -->
        <VBox fx:id="detailsBox" alignment="TOP_LEFT" layoutX="225" layoutY="65" maxHeight="700" maxWidth="500" prefHeight="629.0" prefWidth="500.0" spacing="10" styleClass="details-box" stylesheets="@style/Main.css">
            <children>
                <Label styleClass="detail-label" text="Name:" />
                <Text fx:id="nameText" styleClass="detail-text" />
                <Label styleClass="detail-label" text="Type:" />
                <Text fx:id="typeText" styleClass="detail-text" />
                <Label styleClass="detail-label" text="Entry Price:" />
                <Text fx:id="priceText" styleClass="detail-text" />
                <Label styleClass="detail-label" text="Status:" />
                <Text fx:id="statusText" styleClass="detail-text" />
                <Label styleClass="detail-label" text="Description:" />
                <TextFlow fx:id="descriptionFlow" styleClass="detail-text" prefWidth="460.0">
                    <Text fx:id="descriptionText" style="-fx-fill: white;"/>
                </TextFlow>



                <WebView fx:id="webView" prefHeight="339.0" prefWidth="460.0" />
            </children>
            <VBox.margin>
                <Insets bottom="20" left="20" right="20" top="20" />
            </VBox.margin>
        </VBox>

    </children>
    <stylesheets>
        <URL value="@style/Main.css" />
    </stylesheets>
</StackPane>
